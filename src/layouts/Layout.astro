---
interface Props {
  title: string;
  description?: string;
  canonical?: string;
}
const { title, description, canonical } = Astro.props;
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>

    <!-- SEO Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="The Latin Action | CompaÃ±ia de salsa y bachata en elche" />
    <meta name="keywords" content="Lady Style, Bachata, Baile en Elche, Bachata Elche, Salsa Elche, Clases de baile, Baile latino Elche, Talleres de bachata, Clases de salsa, Baile femenino, Bachata sensual, Danza en Elche, Latin dance Elche, Academia de baile Elche, Baile para mujeres" />
    
    <meta
      name="description"
      content={description ??
        "Academia de baile The Latin Action. Aprende bachata y salsa en Elche."}
    />

    <!-- Canonical URL -->
    {canonical && <link rel="canonical" href={canonical} />}

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description ??
        "Descubre tus clases de baile favoritas en The Latin Action."}
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/opengraph-default.jpg" />
    <meta
      property="og:url"
      content={canonical ?? "https://thelatinaction.com"}
    />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content={description ??
        "Bachata y salsa para todos los niveles en Elche."}
    />

    <!-- One .ico fallback -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <!-- Modern PNG favicons -->
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />

    <!-- Apple touch icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Manifest for PWA and theme color -->
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#0f172a" />

    <link rel="sitemap" type="application/rss+xml" href="/sitemap-index.xml" />

    <ViewTransitions />
  </head>
  <body>
    <Header />
    <div
      class="min-h-screen bg-white/5 rounded-xl shadow-lg backdrop-blur-md text-white"
    >
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html,
/* global.css */
body {
    margin: 0;
    padding: 0;
    font-family: "Poppins", sans-serif;
    background: linear-gradient(to bottom, #3a304d, #281f38);
    color: white;
    max-width: 100vw;
    overflow-x: hidden;
  }

  @font-face {
    font-family: "Dance";
    src: url("/fonts/Dancing Script.ttf") format("truetype");
    font-weight: semibold;
    font-display: swap;
  }

  .scale-transition {
    transition: transform 0.5s ease-out;
    transform: scale(1);
    filter: drop-shadow(0 0 0.5rem white);
  }

  .scale-transition:hover {
    transform: scale(1.05); /* Scale on hover */
    filter: drop-shadow(0 0 0.5rem #ff004d);
  }

  .exclude-filter {
    filter: none !important;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: "Poppins", sans-serif;
    font-weight: 900;
    letter-spacing: -0.02em;
  }

  p {
    line-height: 1.6;
    color: #e0e7ff;
  }
</style>

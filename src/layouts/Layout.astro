---
interface Props {
  title: string;
  description?: string;
  canonical?: string;
}
const { title, description, canonical } = Astro.props;
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />

    <title>{title}</title>

    <meta
      name="description"
      content={description ??
        "Academia de baile The Latin Action. Aprende bachata y salsa en Elche."}
    />

    <!-- Canonical URL -->
    {canonical && <link rel="canonical" href={canonical} />}

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description ??
        "Descubre tus clases de baile favoritas en The Latin Action."}
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/opengraph-default.jpg" />
    <meta
      property="og:url"
      content={canonical ?? "https://thelatinaction.com"}
    />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content={description ??
        "Bachata y salsa para todos los niveles en Elche."}
    />

    <!-- Favicon -->
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="https://res.cloudinary.com/dgvvnopu7/image/upload/v1747913778/gu9isd9n7m4iwojv87f4.webp"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="https://res.cloudinary.com/dgvvnopu7/image/upload/v1747913778/gu9isd9n7m4iwojv87f4.webp"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="https://res.cloudinary.com/dgvvnopu7/image/upload/v1747913778/gu9isd9n7m4iwojv87f4.webp"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" type="application/rss+xml" href="/sitemap-index.xml" />
    <link rel="preload" as="image" href="https://res.cloudinary.com/dgvvnopu7/image/upload/v1748358937/prpkxxafvcddvczygq9j.webp" />
    <link rel="preload" as="image" href="https://res.cloudinary.com/dgvvnopu7/image/upload/v1747902762/vjchy6wqnxdc3afva06b.webp" />
    
    <ViewTransitions />
  </head>
  <body>
    <Header />
    <div
      class="min-h-screen bg-black bg-opacity-40 rounded-xl
           shadow-lg backdrop-blur-sm text-white"
    >
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    padding: 0;
    font-family: "Poppins", sans-serif;
    background: linear-gradient(to right, #0f172a, #1e293b, #334155);
    color: white;
    max-width: 100vw;
    overflow-x: hidden;
  }
  @font-face {
    font-family: "Dance";
    src: url("/fonts/Dancing Script.ttf") format("truetype");
    font-weight: semibold;
    font-display: swap;
  }
  img {
    mask-image: linear-gradient(black 70%, transparent 95%);
  }

  .scale-transition {
    transition: transform 0.5s ease-out;
    transform: scale(1);
    filter: drop-shadow(0 0 0.5rem white);
  }

  .scale-transition:hover {
    transform: scale(1.05); /* Scale on hover */
    filter: drop-shadow(0 0 0.5rem #ff004d);
  }

  .exclude-filter {
    filter: none !important;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: "Poppins", sans-serif;
    font-weight: 900;
    letter-spacing: -0.02em;
  }

  p {
    line-height: 1.6;
    color: #e0e7ff;
  }
</style>

---
import Layout from "@/layouts/Layout.astro";
import ImageMasonry from "@/components/ImageMasonry.astro";
import { galleryImages } from "@/data/galleryImages";
---

<Layout
  title="Galería de Fotos | The Latin Action"
  description="Revive los mejores momentos de nuestras clases y eventos de salsa y bachata en Elche."
  canonical="https://thelatinaction.com/galeria/"
>
  <section class="text-center pt-24 px-6 max-w-5xl mx-auto">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Galería de Fotos</h1>
    <p class="text-lg md:text-xl leading-relaxed text-freshPeach-100">
      Explora nuestra galería de fotos y revive los momentos más emocionantes con <span class="text-freshMint-400 font-semibold">Juan Carlos y Luna</span>.
    </p>
  </section>

  <ImageMasonry images={galleryImages} />
</Layout>

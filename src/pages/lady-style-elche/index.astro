---
import Layout from "@/layouts/Layout.astro";
import HeroSection from "@/components/HeroSection.astro";
import Modalities from "@/components/Modalities.astro";
import ImageMasonry from "@/components/ImageMasonry.astro";
import HistoryLocation from "@/components/HistoryLocation.astro";
import Footer from "@/components/Footer.astro";
import Logros from "@/components/Logros.astro";

// Datos de las modalidades de baile
const modalitiesData = [
  {
    title: "Bachata en Pareja",
    image:
      "https://media.istockphoto.com/id/1195081192/es/foto/bailarines-en-jeans-vaqueros-bailando-bachata-sobre-fondo-gris.jpg?s=2048x2048&w=is&k=20&c=69O3UhF8uGByN06ef7WGDm2KE34jAUKL2-qgo1YjJts=",
    description:
      "Vive la pasión de la bachata en pareja en Elche. Aprende figuras, conexión y estilo en cada clase",
    link: "/bachata-en-pareja-elche",
  },
  {
    title: "Salsa",
    image:
      "https://media.istockphoto.com/id/1195081192/es/foto/bailarines-en-jeans-vaqueros-bailando-bachata-sobre-fondo-gris.jpg?s=2048x2048&w=is&k=20&c=69O3UhF8uGByN06ef7WGDm2KE34jAUKL2-qgo1YjJts=",
    description:
      "Aprende a bailar salsa en Elche con clases dinámicas, divertidas y adaptadas a todos los niveles",
    link: "/salsa-elche",
  },
  {
    title: "Lady Style",
    image:
      "https://media.istockphoto.com/id/1195081192/es/foto/bailarines-en-jeans-vaqueros-bailando-bachata-sobre-fondo-gris.jpg?s=2048x2048&w=is&k=20&c=69O3UhF8uGByN06ef7WGDm2KE34jAUKL2-qgo1YjJts=",
    description:
      "Explora tu lado más expresivo con nuestras clases de Lady Style en Elche. Técnica, actitud y elegancia",
    link: "/lady-style-elche",
  },
];


// URLs de imágenes para el masonry

const galleryImages = [
  "https://images.unsplash.com/photo-1517423440428-a5a00ad493e8?w=600&h=800&fit=crop",
  "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=600&h=400&fit=crop",
  "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=600&h=400&fit=crop",
  "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=600&h=400&fit=crop",
  "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=600&h=400&fit=crop",
];
---

<Layout
  title="Clases de Baile en Elche | The Latin Action - Salsa, Bachata y Lady Style"
  description="Descubre las mejores clases de baile en Elche con The Latin Action. Aprende salsa, bachata y lady style con instructores profesionales."
  canonical="https://www.thelatinaction.com/"
>
  <main class="text-white">

    
    <!-- Hero Section -->
    <HeroSection
    mobileImage=""
    tabletImage=""
    xlImage=""
    heroTitle="Clases de Baile en Elche"
    heroSpan="Salsa, Bachata y Lady Style"
    heroSubtitle="Aprende a bailar con pasión y técnica en The Latin Action."
    />
    
    <Logros />

    <!-- Sección Informativa -->
    <section class="py-8 px-8 max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold mb-4">Clases de Baile en Elche</h1>
      <p class="mb-4 text-xl">
        En <strong>The Latin Action</strong>, ofrecemos <strong
          >clases de baile en Elche</strong
        > para todos los niveles. Ya sea que quieras aprender <strong
          >salsa</strong
        >, <strong>bachata</strong> o <strong>lady style</strong>, nuestros
        instructores profesionales te guiarán en cada paso.
      </p>
      <p class="mb-4 text-xl">
        Nuestras clases están diseñadas para mejorar tu técnica, confianza y
        estilo en la pista de baile. Además, fomentamos un ambiente amigable y
        divertido donde podrás conocer a otras personas apasionadas por el
        baile.
      </p>
      <p class="mb-4 text-xl">
        ¿Estás listo para comenzar? ¡<a
          href="/contacto"
          class="text-blue-500 underline">Contáctanos</a
        > y reserva tu primera clase!
      </p>
    </section>

    <!-- Modalidades -->
    <Modalities modalities={modalitiesData} />

    <!-- Galería de Imágenes -->
    <ImageMasonry images={galleryImages} />

    <!-- Historia y Ubicación -->
    <HistoryLocation />
  </main>
  <Footer />
</Layout>

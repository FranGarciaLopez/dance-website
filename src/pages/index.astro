---
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection.astro";
import HomeImage from "../components/HomeImage.astro";
---

	<Layout title="Welcome to Astro.">
		<main class="flex flex-col"
	transition:animate="slide">
		<section>
			<HeroSection>
				<HeroSection>
					<div
						class="container relative flex px-6 py-20 mx-auto"
						slot="heroImage"
	
					>
						<div
							class="relative justify-center z-20 flex flex-col sm:w-2/3 lg:w-2/5"
						>
							<span
								class="w-20 h-2 mb-12 bg-gray-800"
							>
							</span>
							<h1
								class="flex flex-col text-6xl font-black leading-none text-white/60 uppercase font-bebas-neue sm:text-8xl dark:text-white"
							>
								Bachata
								<span
									class="text-5xl text-[#ff004d]/60 sm:text-7xl"
								>
									Online
								</span>
							</h1>
						         <button class="bg-[#ff004d] text-white px-4 py-2 mt-4 rounded-md">Prueba gratis ahora</button>
						</div>
						<div
							class="relative hidden sm:block sm:w-1/3 lg:w-3/5"
						>
							<HomeImage />
						</div>
					</div>
			
		</HeroSection>

			</HeroSection>
		</section>
	</main>
</Layout>

<style>
	main {
		overflow: hidden;
	}
</style>

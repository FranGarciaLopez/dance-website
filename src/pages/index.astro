---
import Layout from "@/layouts/Layout.astro";
import HeroSection from "@/components/HeroSection.astro";
import Modalities from "@/components/Modalities.astro";
import ImageMasonry from "@/components/ImageMasonry.astro";
import HistoryLocation from "@/components/HistoryLocation.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";

// Datos de las modalidades de baile
const modalitiesData = [
	{
		title: "Bachata en Pareja",
		image: "https://media.istockphoto.com/id/1195081192/es/foto/bailarines-en-jeans-vaqueros-bailando-bachata-sobre-fondo-gris.jpg?s=2048x2048&w=is&k=20&c=69O3UhF8uGByN06ef7WGDm2KE34jAUKL2-qgo1YjJts=",
		description: "Aprende los movimientos sensuales de la bachata en pareja.",
		link: "/bachata-en-pareja-elche",
	},
	{
		title: "Salsa",
		image: "https://media.istockphoto.com/id/1195081192/es/foto/bailarines-en-jeans-vaqueros-bailando-bachata-sobre-fondo-gris.jpg?s=2048x2048&w=is&k=20&c=69O3UhF8uGByN06ef7WGDm2KE34jAUKL2-qgo1YjJts=",
		description: "Disfruta del ritmo y la alegría de la salsa en nuestras clases de elche.",
		link: "/salsa-elche",
	},
	{
		title: "Lady Style",
		image: "https://media.istockphoto.com/id/1195081192/es/foto/bailarines-en-jeans-vaqueros-bailando-bachata-sobre-fondo-gris.jpg?s=2048x2048&w=is&k=20&c=69O3UhF8uGByN06ef7WGDm2KE34jAUKL2-qgo1YjJts=",
		description: "Domina la técnica y el estilo de la salsa en línea con el profesor más experimentado.",
		link: "/lady-style-elche",
	},
];

// URLs de imágenes para el masonry

const galleryImages = [
	"https://images.unsplash.com/photo-1517423440428-a5a00ad493e8?w=600&h=800&fit=crop",
	"https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=600&h=400&fit=crop",
	"https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=600&h=400&fit=crop",
	"https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=600&h=400&fit=crop",
	"https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=600&h=400&fit=crop"
];
---

<Layout title="The Latin Action | Escuela de Baile en Elche">
	<main class="text-white">
		<!-- Hero Section -->
		<HeroSection>
			<!-- Contenido del Hero -->
			<div
				class="relative bg-cover bg-center text-center text-white py-12 md:py-24"
				style="background-image: url('https://images.unsplash.com/photo-1519567241046-7f570eee1b97?w=1200&h=800&fit=crop');"
			>
				<!-- Overlay para mejorar la legibilidad del texto -->
				<div
					class="absolute inset-0 opacity-60"
				>
				</div>

				<div
					class="relative max-w-4xl mx-auto px-4"
				>
					<h1
						class="text-4xl md:text-5xl font-extrabold mb-4"
					>
						¡Bienvenido a <span
							class="text-pink-500"
							>The Latin
							Action</span
						>!
					</h1>
					<p
						class="text-xl md:text-2xl mb-8"
					>
						Descubre el ritmo y
						la pasión de la
						danza latina en
						Elche, Alicante y
						Murcia.
					</p>
					<a
						href="https://wa.me/34645089122?text=Hola,%20quiero%20más%20información%20sobre%20las%20clases"
						class="inline-block px-6 py-3 md:px-8 md:py-4 bg-pink-600 text-white font-semibold rounded-full transition-transform transform hover:scale-105 hover:bg-pink-700"
					>
						Reserva tu clase de
						prueba gratis
					</a>
				</div>

				
			</div>
			
			<Socials />
		</HeroSection>

		<!-- Modalidades -->
		<Modalities modalities={modalitiesData} />

		<!-- Galería de Imágenes -->
		<ImageMasonry images={galleryImages} />

		<!-- Historia y Ubicación -->
		<HistoryLocation />

		<Footer />

	</main>
</Layout>

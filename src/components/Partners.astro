---
import { theme } from "../pages/theme.js";

let partners = [
  {
    image:
      "https://res.cloudinary.com/dgvvnopu7/image/upload/v1747908596/mtomj9v3xbveljpvkohi.webp",
    alt: "Academia de baile DAIREN",
  },
  {
    image:
      "https://imagedelivery.net/4-G5Kx2wHcK3gRDUXWrgEw/17c66790-c8f1-4fb4-285e-77ccf4959900/public",
    alt: "Bubaloo Academia de baile",
  },
  {
    image:
      "https://imagedelivery.net/4-G5Kx2wHcK3gRDUXWrgEw/9ed7195e-560b-486e-fbba-370ab8865f00/public",
    alt: "Baby Oh Multi Sala de baile",
  },
];
---

<section class="flex flex-col items-center justify-center py-12">
  <h2
    class="text-4xl font-extrabold mb-10 px-4"
    style={`color: ${theme.schedule.titleColor};`}
  >
    Nuestros Socios
  </h2>

  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 max-w-4xl w-full px-4"
  >
    {
      partners.map((partner) => (
        <div
          class="flex flex-col items-center justify-center p-6 bg-white/10 backdrop-blur-lg rounded-xl shadow-lg
                 transition-transform duration-300 hover:scale-105 hover:shadow-2xl cursor-pointer"
          title={partner.alt}
        >
          <img
            src={partner.image}
            alt={`Imagen de ${partner.alt}`}
            class="object-contain w-24 h-24 border-4 border-white rounded-full drop-shadow-lg"
            draggable="false"
          />
        </div>
      ))
    }
  </div>
</section>

<style>
  section {
    overflow: hidden;
  }
</style>

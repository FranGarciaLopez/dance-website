    alt: "Academia de baile DAIREN Elche",
    location: {
      name: "Elche",
      url: "https://maps.app.goo.gl/16UnuAExaLCYFaWU8",
      profesorado: "Luna by The Latin Action SB company",
    },
  },
  {

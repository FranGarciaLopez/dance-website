---

<section class="flex flex-col items-center justify-center py-16 relative z-10">
  <h2
    class="text-4xl md:text-5xl font-extrabold mb-14 px-6 text-center tracking-tight text-freshEggplant-200"
  >
    Nuestros Socios
  </h2>

  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 max-w-5xl w-full px-4"
  >
    {
      partners.map((partner) => (
        <div
          class="flex flex-col items-center justify-center p-6 rounded-2xl bg-[#27272a] backdrop-blur-xl shadow-lg hover:shadow-freshEggplant-800/90 transition-shadow duration-300"
          title={partner.alt}
        >
          <div class="w-28 h-28 rounded-full overflow-hidden border-4 border-white shadow-md group-hover:shadow-xl transition-all duration-300">
            <img
              src={partner.image}
              alt={`Imagen de ${partner.alt}`}
              class="object-cover w-full h-full"
              draggable="false"
            />
          </div>
          <p class="mt-4 text-freshEggplant-200 text-lg font-semibold text-center">
            {partner.alt}
          </p>

          <p class="text-sm text-freshEggplant-300 mt-1">
            {partner.location.profesorado
              ? `Profesorado: ${partner.location.profesorado}`
              : ""}
          </p>
          <p class="text-sm text-freshEggplant-400 mt-1">
            Ubicaci√≥n:{" "}
            <a
              href={partner.location.url}
              target="_blank"
              rel="noopener noreferrer"
              class="underline hover:text-freshEggplant-100"
            >
              {partner.location.name}
            </a>
          </p>
        </div>
      ))
    }
  </div>
</section>

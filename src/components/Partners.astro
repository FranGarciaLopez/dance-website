---
import { theme } from "../pages/theme.js";

let partners = [
          {
                    image: "https://imagedelivery.net/4-G5Kx2wHcK3gRDUXWrgEw/17c66790-c8f1-4fb4-285e-77ccf4959900/public",
                    alt: "Bubaloo Academia de baile",
          },
          {
                    image: "https://imagedelivery.net/4-G5Kx2wHcK3gRDUXWrgEw/9ed7195e-560b-486e-fbba-370ab8865f00/public",
                    alt: "Baby Oh Multi Sala de baile",
          },
          {
                    image: "https://imagedelivery.net/4-G5Kx2wHcK3gRDUXWrgEw/a633c9b3-ff08-47ad-8f2a-a10590742f00/public",
                    alt: "Fever Dance, Academia de baile en Alicante",
          },
];
---

<!-- section for partners from Latin action -->
<section class="flex flex-col items-center justify-center py-8">
          <h2
            class="text-3xl font-extrabold mb-8 px-4"
            style={`color: ${theme.schedule.titleColor};`}
          >
            Nuestros Socios
          </h2>
        
          <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl w-full px-4"
>
          {
                    partners.map((partner) => (
                              <div class="flex flex-col items-center justify-center p-4 bg-white/10 backdrop-blur-md rounded-lg w-full">
                                        <img
                                                  src={partner.image}
                                                  alt={`Imagen de ${partner.alt}`}
                                                  class="object-contain w-20 h-20 border-2 border-white rounded-full"
                                                  draggable="false"
                                        />
                              </div>
                    ))
          }
</div>
        </section>

<style>
          section {
                    overflow: hidden;
          }
</style>

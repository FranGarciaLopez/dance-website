---
const { title, image, shortDesc } = Astro.props;
---

<article class="relative group aspect-[2/3] w-full rounded-xl overflow-hidden shadow-xl transition-transform hover:scale-105 cursor-pointer bg-[#111827]">
  <!-- Background image -->
  <img
    src={image}
    alt={title}
    class="w-full h-full object-cover"
    draggable="false"
  />

  <!-- Colored gradient overlay for better visual impact -->
  <div class="absolute inset-0 bg-gradient-to-t from-pink-900/30 via-pink-700/10 to-transparent" />

  <!-- Text overlay -->
  <div class="absolute bottom-0 left-0 w-full px-6 py-5 text-center z-10">
    <h2 class="text-white text-5xl font-bold drop-shadow-md">{title}</h2>
    <p class="text-white text-lg mt-2 drop-shadow-sm">{shortDesc}</p>
  </div>
</article>

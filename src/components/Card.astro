---
import { theme } from "../pages/theme";
---

<div
	class="flex flex-col items-center p-6 rounded-lg shadow-lg backdrop-blur-md transition-all duration-300
   rounded-lg shadow-lg backdrop-blur-md transition-all duration-300
	bg-white/10 hover:bg-[#496080]/20 cursor-pointer"
	style={`color: ${theme.cardColors.textColor}`}
>
	<slot name="background" class="rounded-full" />
	<div class="pb-4" style={`color: ${theme.common.textColor};`}>
		<h5>
			<slot
				name="title"
				class="text-lg font-semibold"
			/>
		</h5>
	</div>
	<p>
		<slot
			name="content"
			class="text-sm"
			style={`color: ${theme.common.textColor};`}
		/>
	</p>
</div>

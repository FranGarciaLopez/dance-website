---
const { title, image, shortDesc, eager = false } = Astro.props;

function cloudinaryResize(url: string, width: number) {
  return url.replace(
    "/upload/",
    `/upload/w_${width},ar_4:5,c_fill,g_center,f_auto,q_auto,dpr_auto/`
  );
}

---
<article
  class="relative group aspect-[4/5] w-full rounded-xl overflow-hidden shadow-lg transition-transform hover:scale-105 cursor-pointer"
  tabindex="0"
>
  <!-- Responsive image -->
  <picture>
    <source
      type="image/webp"
      srcset={` 
        ${cloudinaryResize(image, 300)} 300w,
        ${cloudinaryResize(image, 600)} 600w,
        ${cloudinaryResize(image, 900)} 900w
      `}
      sizes="(max-width: 600px) 300px, (max-width: 900px) 600px, 900px"
    />
    <img
      src={cloudinaryResize(image, 600)}
      alt={title}
      class="w-full h-full object-cover"
      width="600"
      height="750"
      loading={eager ? "eager" : "lazy"}
      decoding="async"
      draggable="false"
    />
  </picture>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/30 z-10"></div>

  <!-- Content -->
  <div class="absolute inset-0 flex flex-col justify-center items-center text-center z-20">
    <h2
      class="text-white text-3xl md:text-4xl font-bebas drop-shadow-lg"
    >
      {title}
    </h2>
    <p
      class="mt-2 text-white/90 text-md md:text-xl max-w-xs drop-shadow
      opacity-0 group-hover:opacity-100 group-focus:opacity-100 group-active:opacity-100
      transition-opacity duration-300 font-inter leading-relaxed"
    >
      {shortDesc}
    </p>
  </div>
</article>

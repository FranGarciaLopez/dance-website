---
/**
 * CityLanding.astro
 * Componente reutilizable para landings locales SEO
 * 70% contenido com√∫n + 30% contenido √∫nico por ciudad
 */
import { type CityData, sharedContent } from "@/data/cityData";
import Benefits from "@/components/Benefits.astro";
import Schedule from "@/components/Schedule.astro";
import Partners from "@/components/Partners.astro";

interface Props {
       city: CityData;
}

const { city } = Astro.props;
---

<section id="contenido" class="py-14 px-6 max-w-5xl mx-auto scroll-mt-20">
       <h2
              class="text-4xl lg:text-5xl font-bebas tracking-tight uppercase mb-10 leading-snug lg:leading-tight bg-gradient-to-r from-main-gradient-from to-main-gradient-to bg-clip-text text-transparent drop-shadow-sm"
       >
              Clases de Bachata y Salsa en {city.name}
       </h2>

       <div class="space-y-6">
              <p class="text-lg lg:text-xl leading-relaxed text-gray-200">
                     {city.localIntro}
              </p>

              <!-- Referencia geogr√°fica -->
              <p
                     class="text-base lg:text-lg leading-relaxed text-gray-300 italic"
              >
                     üìç {city.geoReference}
              </p>
       </div>
</section>

<section class="py-14 px-6 max-w-5xl mx-auto">
       <h2
              class="text-3xl lg:text-4xl font-bebas tracking-tight uppercase mb-8 leading-snug lg:leading-tight text-white"
       >
              {sharedContent.aboutUs.title}
       </h2>
       <p class="text-lg lg:text-xl leading-relaxed text-gray-200">
              {sharedContent.aboutUs.description}
       </p>
</section>

<section class="py-14 px-6 max-w-5xl mx-auto">
       <h2
              class="text-3xl lg:text-4xl font-bebas tracking-tight uppercase mb-10 leading-snug lg:leading-tight bg-gradient-to-r from-main-gradient-from to-main-gradient-to bg-clip-text text-transparent"
       >
              ¬øQu√© aprender√°s en nuestras clases de baile en {city.name}?
       </h2>

       <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {
                     sharedContent.danceTypes
                            .filter((dance) => !dance.onlyElche || city.hasLadyStyle)
                            .map((dance) => (
                                   <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-6 border border-white/10 hover:border-main-gradient-from/30 transition-all duration-300">
                                          <h3 class="text-xl font-bebas uppercase text-main-gradient-from mb-3">
                                                 {dance.name}
                                          </h3>
                                          <p class="text-gray-300 leading-relaxed">
                                                 {dance.description}
                                          </p>
                                   </div>
                            ))
              }
       </div>
</section>

<section class="py-14 px-6 max-w-5xl mx-auto">
       <h2
              class="text-3xl lg:text-4xl font-bebas tracking-tight uppercase mb-8 leading-snug lg:leading-tight text-white"
       >
              {sharedContent.methodology.title}
       </h2>

       <ul class="space-y-4">
              {
                     sharedContent.methodology.points.map((point) => (
                            <li class="flex items-start gap-3 text-lg text-gray-200">
                                   <span class="text-main-gradient-from mt-1">
                                          ‚úì
                                   </span>
                                   <span>{point}</span>
                            </li>
                     ))
              }
       </ul>
</section>

<section class="py-14 px-6 max-w-5xl mx-auto">
       <h2
              class="text-3xl lg:text-4xl font-bebas tracking-tight uppercase mb-10 leading-snug lg:leading-tight bg-gradient-to-r from-main-gradient-from to-main-gradient-to bg-clip-text text-transparent"
       >
              Niveles de clases de baile en {city.name}
       </h2>

       <div class="grid md:grid-cols-2 gap-8">
              {
                     sharedContent.levels.items.map((level) => (
                            <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-6 border border-white/10">
                                   <h3 class="text-xl font-bebas uppercase text-main-gradient-to mb-3">
                                          {level.name}
                                   </h3>
                                   <p class="text-gray-300 leading-relaxed">
                                          {level.description}
                                   </p>
                            </div>
                     ))
              }
       </div>
</section>

<section class="py-14 px-6 max-w-5xl mx-auto text-center">
       <div
              class="bg-gradient-to-r from-main-gradient-from/20 to-main-gradient-to/20 rounded-3xl p-10 border border-main-gradient-from/20"
       >
              <h2
                     class="text-3xl lg:text-4xl font-bebas tracking-tight uppercase mb-6 text-white"
              >
                     {city.ctaText}
              </h2>
              <p class="text-lg text-gray-300 mb-8">
                     ¬øListo para dar el primer paso? Contacta con nosotros y
                     empieza a bailar.
              </p>
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                     <a
                            href="tel:+34645089122"
                            class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-main-gradient-from to-main-gradient-to text-white text-lg font-medium py-4 px-8 rounded-full shadow-lg hover:shadow-main-gradient-from/30 hover:scale-105 transition-all duration-300"
                     >
                            <svg
                                   xmlns="http://www.w3.org/2000/svg"
                                   class="h-5 w-5"
                                   fill="none"
                                   viewBox="0 0 24 24"
                                   stroke="currentColor"
                            >
                                   <path
                                          stroke-linecap="round"
                                          stroke-linejoin="round"
                                          stroke-width="2"
                                          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                   ></path>
                            </svg>
                            645 08 91 22
                     </a>
                     <a
                            href="/contacto/"
                            class="inline-flex items-center justify-center gap-2 bg-white/10 backdrop-blur-sm text-white text-lg font-medium py-4 px-8 rounded-full border border-white/20 hover:bg-white/20 hover:scale-105 transition-all duration-300"
                     >
                            <svg
                                   xmlns="http://www.w3.org/2000/svg"
                                   class="h-5 w-5"
                                   fill="none"
                                   viewBox="0 0 24 24"
                                   stroke="currentColor"
                            >
                                   <path
                                          stroke-linecap="round"
                                          stroke-linejoin="round"
                                          stroke-width="2"
                                          d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                   ></path>
                            </svg>
                            Contactar
                     </a>
              </div>
       </div>
</section>


<Benefits />

<Schedule />

<Partners />

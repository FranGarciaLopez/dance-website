---
export interface Modality {
  title: string;
  image: string;
  description: string;
  link: string;
}

interface Props {
  modalities: Modality[];
}
const { modalities } = Astro.props;
---

<section
  class="max-w-4xl mx-auto px-6 py-16"
  id="modalidades"
  aria-label="Modalidades de baile"
  role="region"
>
  <h2 class="text-2xl md:text-3xl lg:text-5xl font-bold text-center mb-8">
    Modalidades
  </h2>
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10"
    aria-label="Modalidades de baile"
  >
    {
      modalities.map((modality) => (
        <a
          href={modality.link}
          class="card group block rounded-xl overflow-hidden shadow-lg bg-gradient-to-br from-gray-800 via-gray-900 to-black transform transition-transform duration-300 hover:scale-105 hover:shadow-2xl"
          aria-label={`Más información sobre ${modality.title}`}
        >
          <div
            class="h-64 bg-cover bg-center"
            style={`background-image: url(${modality.image});`}
            aria-hidden="true"
          />
          <div class="p-6">
            <h3 class="text-2xl font-semibold mb-3 text-white group-hover:text-pink-500 transition-colors duration-300">
              {modality.title}
            </h3>
            <p class="text-lg text-gray-300 group-hover:text-gray-100 transition-colors duration-300">
              {modality.description}
            </p>
          </div>
        </a>
      ))
    }
  </div>
</section>

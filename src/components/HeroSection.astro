---
const { mobileImage, tabletImage, xlImage, heroTitle, heroSpan, heroSubtitle } =
  Astro.props;
const currentPath = Astro.url.pathname;

interface RouteTitles {
  [key: string]: string;
}
// Diccionario de rutas a nombres legibles
const routeTitles: RouteTitles = {
  "/lady-style-elche": "Lady Style Elche",
  "/bachata-en-pareja-elche": "Bachata en Pareja Elche",
  "/salsa-elche": "Salsa Elche",
};

const readableTitle = routeTitles[currentPath] ?? "vuestras clases";

const encodedMessage = encodeURIComponent(
  `Hola, quiero más información sobre ${readableTitle}`,
);
const whatsappLink = `https://wa.me/34645089122?text=${encodedMessage}`;
---

<section
  id="hero"
  aria-label="Sección de bienvenida"
  role="banner"
  class="relative h-screen w-full flex flex-col items-end md:items-center justify-center text-center overflow-hidden"
>
  <!-- Fondo degradado inferior para fade -->
  <div class="absolute bottom-0 w-full h-40 bg-gradient-to-t from-black/90 to-transparent z-10 pointer-events-none"></div>

  <!-- Imagen de fondo -->
  <figure class="absolute inset-0 h-full w-full z-0 pointer-events-none">
    <picture>
      <source srcset={xlImage} media="(min-width: 1280px)" />
      <source srcset={tabletImage} media="(min-width: 768px)" />
      <img
        src={mobileImage}
        alt="Hero image"
        class="w-full h-full object-cover object-center brightness-75"
      />
    </picture>
  </figure>

  <!-- Contenido -->
  <div
    class="relative z-20 max-w-5xl w-full px-6 md:px-0 py-10 md:py-16 bg-black/50 backdrop-blur-xs rounded-xl shadow-sm mx-auto text-white mt-28 md:mt-40 transition-all duration-300"
  >
    <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight leading-tight mb-4 uppercase">
      {heroTitle}
      <span class="block bg-gradient-to-r from-pink-400 via-pink-600 to-pink-500 bg-clip-text text-transparent">
        {heroSpan}
      </span>
    </h1>
    <p class="text-base md:text-2xl text-white/80 mb-8 max-w-3xl mx-auto leading-relaxed">
      {heroSubtitle}
    </p>

    <a
      href={whatsappLink}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block bg-gradient-to-br from-pink-500 via-pink-600 to-pink-700 text-white text-lg font-semibold py-4 px-6 rounded-full shadow-md hover:scale-105 hover:shadow-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-pink-400/60"
    >
      ¡Reserva tu clase con nosotros!
    </a>
  </div>
</section>


---
// HeroSection.astro
import { onMount } from "solid-js";
import gsap from "gsap";

let container;

onMount(() => {
  const tl = gsap.timeline({ defaults: { ease: "power3.out" } });
  tl.from(container, { opacity: 0, y: 50, duration: 1 }).from(
    container.querySelectorAll("h1, p, a"),
    {
      opacity: 0,
      y: 20,
      stagger: 0.2,
      duration: 0.8,
    },
    "-=0.5"
  );
});
---

<section
  ref={container}
  class="relative bg-[url('/bg.webp')] bg-cover bg-center h-screen flex flex-col justify-center items-center text-center px-4"
>
  <div class="absolute inset-0 bg-black bg-opacity-70"></div>
  <div class="relative z-10 max-w-4xl">
    <h1
      class="text-4xl md:text-7xl font-extrabold text-white mb-6 drop-shadow-lg"
    >
      Bienvenido a <span class="text-pink-500">The Latin Action</span>
    </h1>
    <p class="text-lg md:text-xl text-gray-200 mb-8 drop-shadow-md">
      Descubre la pasión por el baile en nuestras escuelas de Elche.
    </p>
    <a
      href="https://wa.me/34645089122?text=Hola,%20quiero%20más%20información%20sobre%20las%20clases"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block bg-pink-500 hover:bg-pink-600 text-white font-semibold py-4 px-5 rounded-full shadow-lg transform
      transition-transform duration-300 hover:scale-105"
      aria-label="Reserva tu clase de prueba"
    >
      ¡Reserva tu clase de prueba!
    </a>
  </div>
</section>

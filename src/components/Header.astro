              aria-label="Clases de baile en Novelda"
            >游늸 Novelda</a>
          </li>
        </ul>
      </li>
    </ul>
  </nav>
</header>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const menuButton = document.getElementById("menu-button");
    const closeMenuButton = document.getElementById("close-menu");
    const primaryMenu = document.getElementById("primary-menu");
    const ubicacionesButton = document.getElementById("ubicaciones-button");
    const ubicacionesMenu = document.getElementById("ubicaciones-menu");
    const ubicacionesArrow = document.getElementById("ubicaciones-arrow");

    if (menuButton && closeMenuButton && primaryMenu) {
      menuButton.addEventListener("click", function () {
        primaryMenu.classList.remove("-translate-y-full");
        primaryMenu.classList.add("translate-y-0");
        closeMenuButton.classList.remove("hidden");
        menuButton.classList.add("hidden");
      });

      closeMenuButton.addEventListener("click", function () {
        primaryMenu.classList.remove("translate-y-0");
        primaryMenu.classList.add("-translate-y-full");
        closeMenuButton.classList.add("hidden");
        menuButton.classList.remove("hidden");
        // Cerrar tambi칠n el dropdown de ubicaciones
        if (ubicacionesMenu) {
          ubicacionesMenu.classList.add("hidden");
          ubicacionesMenu.classList.remove("flex");
          ubicacionesArrow?.classList.remove("rotate-180");
        }
      });
    }

    // Toggle dropdown en m칩vil
    if (ubicacionesButton && ubicacionesMenu) {
      ubicacionesButton.addEventListener("click", function () {
        const isHidden = ubicacionesMenu.classList.contains("hidden");
        if (isHidden) {
          ubicacionesMenu.classList.remove("hidden");
          ubicacionesMenu.classList.add("flex");
          ubicacionesArrow?.classList.add("rotate-180");
        } else {
          ubicacionesMenu.classList.add("hidden");
          ubicacionesMenu.classList.remove("flex");
          ubicacionesArrow?.classList.remove("rotate-180");
        }
      });
    }
  });
</script>

<style>
  header {
    animation: enhanceHeader linear both;
    animation-timeline: scroll(root);
    animation-range: 0% 200px;
  }

  @keyframes enhanceHeader {
    to {
      background: rgba(0, 0, 0, 0.422);
      background-filter: blur(5px);
      color: rgb(0, 0, 0);
    }
  }
</style>

---
import Card from "./Card.astro";
const { KnowledgeData } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full max-w-4xl mx-auto px-4 py-8">
  {
    KnowledgeData.map(
      (item: { title: string; image: string; shortDesc: string }) => (
        <Card title={item.title} image={item.image} shortDesc={item.shortDesc}/>
      )
    )
  }
</div>

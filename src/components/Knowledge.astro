---
import Card from "./Card.astro";

const { KnowledgeData } = Astro.props;
---

<!-- present what the people can learn -->
<div class="max-w-4xl px-12 mx-auto grid grid-cols-1 gap-6 pb-6 lg:grid-cols-2 lg:px-4">
          {
                    KnowledgeData.map(
                              (item: {
                                        title: string;
                                        image: string;
                                        shortDesc: string;
                              }) => (
                                        <Card>
                                                  <img
                                                            slot="background"
                                                            src={item.image}
                                                            alt={`Imagen de ${item.title}`}
                                                            class="object-contain w-full h-full"
                                                            draggable="false"
                                                  />
                                                  <h5
                                                            slot="title"
                                                            class="flex items-center justify-center"
                                                  >
                                                            {item.title}
                                                  </h5>
                                                  <p slot="content">
                                                            {item.shortDesc}
                                                  </p>
                                        </Card>
                              ),
                    )
          }
</div>

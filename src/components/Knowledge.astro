---
import Card from "./Card.astro";

const { KnowledgeData } = Astro.props;
---

<div
          class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-4xl mx-auto shadow-sm bg-opacity-50 z-10 p-4"
>
          {
                    KnowledgeData.map(
                              (item: {
                                        title: string;
                                        image: string;
                                        shortDesc: string;
                              }) => (
                                        <Card>
                                                  <img
                                                            slot="background"
                                                            src={item.image}
                                                            alt={`Imagen de ${item.title}`}
                                                            class="object-contain w-full h-80"
                                                            draggable="false"
                                                  />
                                                  <h5
                                                            slot="title"
                                                            class="flex items-center justify-center"
                                                  >
                                                            {item.title}
                                                  </h5>
                                                  <p slot="content">
                                                            {item.shortDesc}
                                                  </p>
                                        </Card>
                              ),
                    )
          }
</div>

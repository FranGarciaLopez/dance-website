---
import Card from "./Card.astro";

const { KnowledgeData } = Astro.props;
---

<div
          class="grid grid-cols-1 gap-5 sm:grid-cols-2 md:grid-cols-3 xl:grid xl:grid-cols-4 xl:flex items-center justify-center h-full w-full max-w-6xl mx-auto shadow-sm bg-opacity-50 z-10 pb-10 px-10"
>
          {
                    KnowledgeData.map((item: { title: string, image: string }) => (
                              <Card>
                                        <img
                                                  slot="background"
                                                  src={item.image}
                                                  alt={`Imagen de ${item.title}`}
                                                  class="object-contain w-full h-60"
                                                  draggable="false"
                                        />
                                        <h5 slot="title">{item.title}</h5>
                              </Card>
                    ))
          }
</div>
